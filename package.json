{
  "name": "vscode-phar",
  "displayName": "vscode-phar",
  "publisher": "zobo",
  "description": "PHP PHAR support for Visual Studio Code",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.87.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "php",
    "phar"
  ],
  "author": {
    "name": "Damjan Cvetko",
    "email": "damjan.cvetko@gmail.com"
  },
  "activationEvents": [
    "onFileSystem:phar",
    "onLanguage:phar",
    "workspaceContains:**/*.phar"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-phar.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "vscode-phar.helloWorld2",
        "title": "Hello World2"
      },
      {
        "command": "vscode-phar.open-phar",
        "title": "PHAR: Open Phar URL"
      }
    ],
    "languages": [
      {
        "id": "phar",
        "aliases": [
          "PHAR",
          "phar"
        ],
        "extensions": [
          ".phar"
        ]
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "vscode-phar.open-phar",
          "when": "resourceExtname  == .phar"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "prettier": "prettier \"**/{*.json,*.yml,.*.yml,*.ts,.prettierrc,*.md}\" --write --list-different",
    "prettier-check": "npm run prettier -- --write=false",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.87.0",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "@vscode/test-cli": "^0.0.6",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^10.1.1",
    "ovsx": "^0.10.1",
    "prettier": "^3.5.3",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@types/jszip": "^3.1.3",
    "@types/pako": "^1.0.0",
    "jshashes": "^1.0.7",
    "jszip": "^3.1.5",
    "pako": "^1.0.7"
  }
}
